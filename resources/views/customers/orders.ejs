<section class="orders light-section">
    <div class="container mx-auto pt-12">
        <h1 class="font-bold text-lg mb-4 ">All Orders</h1>
        <% if(messages.success) {%>
        <div id="success-alert" class="flex items-center bg-green-500 text-white text-sm font-bold px-3 py-4" 
        role="alert">
        <img src="done.png" alt="">
            <p><%= messages.success%></p>
        </div>
        <% } %>
        <table class="w-full table-auto bg-white">
            <thead>
                <tr>
                    <th class="px-4 py-2 text-left">Orders</th>
                    <th class="px-4 py-2 text-left">Address</th>
                    <th class="px-4 py-2 text-left">Contact Number</th>
                    <th class="px-4 py-2 text-left">Time</th>
                </tr>
            </thead>
            <tbody>
                <% if(orders.length){ %>
                    <% orders.forEach((odr) =>{  %>
                <tr>
                    <td class="border px-4 py-2">
                        <a class="link" href="/"><%= odr._id %></a>
                    </td>
                    <td class="border px-4 py-2">
                        <a class="link" href="/"><%= odr.phone  %></a>
                    </td>
                    <td class="border px-4 py-2">
                        <a class="link" href="/"><%= odr.address  %></a>
                    </td>
                    <td class="border px-4 py-2">
                        <a class="link" href="/"><%= moment(odr.createdAt).format('hh:mm A')%></a>
                    </td>
                </tr>
                    <% })%>
                <% } else {%>
                    <tr class="p-4"> No Orders found</tr>
                    <% } %>
            </tbody>
        </table>
    </div>
</section>