<section class="hero py-6">
    <div class="container mx-auto px-4 flex items-center justify-between">
        <div class="w-1/2">
            <h6 class="text-lg"><em>Are You Hungry?</em></h6>
            <h1 class="text-3xl md:text-6xl font-bold">Don't Wait</h1>
            <button class="px-6 py-2 rounded-full text-white font-bold mt-6 btn-primary "> Order Now!</button>
        </div>
        <div class="w-1/2">
            <img src="/img/hero-pizza.png">
        </div>
    </div>
</section>
<section class="menu container mx-auto px-4 py-8">
    <h1 class="text-xl font-bold mb-8">All Pizza</h1>
    <div class="grid grid-cols-1 md:grid-cols-2  lg:grid-cols-3 xl:grid-cols-4 col-gap-6 gap-y-16">
        <% pizza.forEach(function(pizz) { %>
            <div class="w-full md:w-64">
                <img class="h-40 mb-4 mx-auto" src="./img/<%= pizz.image%>">
                <div class="text-center">
                    <h2 class="mb-4 text-lg"><%= pizz.name%></h2>
                    <span class="size py-1 px-4 rounded-full uppercase text-xs"><%= pizz.size%></span>
                    <div class="flex items-center justify-around mt-6">
                        <span class="font-bold text-lg">â‚¹<%= pizz.price%></span>
                        <button data-piz="<%= JSON.stringify(pizz) %>" class="add-to-cart rounded-full py-1 px-6 flex items-center">
                            <span class="mr-3">+</span>
                            <span>Add</span>
                        </button>
                    </div>
                </div>
            </div>
        <% }) %>
    </div>
</section>